<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangnhap">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chao mung ban da tro lai,"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#0A71C3"/>
    <TextView
        android:id="@+id/tv2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui long dang nhap de tiep tuc"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:hint="Nhap username"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:background="#BFBFBF"/>
    <EditText
        android:id="@+id/tv4"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:hint="Nhap password"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:background="#BFBFBF"/>
    <CheckBox
        android:id="@+id/chk"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi nho tai khoan"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/chk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btn1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="DANG NHAP"
            android:textStyle="bold"
            android:background="#5AE65F"
            android:layout_marginRight="20dp"
            android:textSize="19sp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="DANG KY"
            android:textStyle="bold"
            android:background="#D84439"
            android:textSize="19sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>